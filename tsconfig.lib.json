{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "es2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist/lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": false,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "include": [
    "./lib/**/*.ts",
    "./lib/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
