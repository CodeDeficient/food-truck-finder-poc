{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "tests/**",
    "test-*.js",
    "test-*.ts",
    "test-*.tsx",
    "**/*-test.*",
    "**/*-tests.*",
    "**/__tests__/**",
    "**/*.mock.*",
    "**/*.stories.*",
    "**/*.snap",
    "coverage/",
    "**/*.bench.*",
    "**/*.example.*",
    "docs/**",
    "**/*.md"
  ]
}
